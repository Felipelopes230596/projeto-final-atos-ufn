@model projeto_final.Models.AlugarModel
@{
    ViewData["Title"] = "Lista de Alugados";
}
<div class="container mt-5 pt-3 w-70">
    <table class="table">
        <legend>Lista de Alugados</legend>
        <thead>
            <tr>
                <th scope="col">Cliente</th>
                <th scope="col">Categoria</th>
                <th scope="col">Qtd de Diárias</th>
                <th scope="col">Valor Total</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {


                foreach (var item in Model.listaAluguel)
                {
                    <tr>
                        <td>@item.cliente.nome</td>
                        <td>@item.Categoria.categoria</td>
                        <td>@item.quantidadeDiarias</td>
                        <td>R$@item.valorTotal</td>
                        <td>
                            <div class="btn-group" role="group">                          
                                <a role="button" class="btn btn-danger" asp-route-id="@item.id" asp-controller="Alugar" asp-action="Finalizar">Finalizar</a>
                            </div>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>
