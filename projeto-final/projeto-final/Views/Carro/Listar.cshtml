@model projeto_final.Models.CarrosModel
@{
    ViewData["Title"] = "Lista de Clientes";
}
<div class="container mt-5 pt-3 w-70">
    <table class="table">
        <legend>Lista de Clientes</legend>
        <thead>
            <tr>
                <th scope="col">Marca</th>
                <th scope="col">Modelo</th>
                <th scope="col">Categoria</th>
                <th scope="col">Valor Diária</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                                 
               
                foreach (var item in Model.ListaCarros)
                {
                    <tr>
                        <td>@item.marca</td>
                        <td>@item.modelo</td>
                        <td>@item.categoria.categoria</td>
                        <td>R$@item.categoria.valorDiaria</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@item.id" asp-controller="Carro" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@item.id" asp-controller="Carro" asp-action="Apagar">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
                
            }
        </tbody>
    </table>
</div>